<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="PassphraseDialog" parent="GtkDialog">
    <property name="deletable">0</property>
    <property name="modal">1</property>
    <property name="destroy_with_parent">1</property>
    <property name="title"></property>
    <child type="action">
      <object class="GtkButton" id="cancel">
        <property name="label" translatable="yes">_Cancel</property>
        <property name="receives_default">1</property>
        <property name="use_underline">1</property>
      </object>
    </child>
    <child type="action">
      <object class="GtkButton" id="forward">
        <property name="label" translatable="yes">Con_tinue</property>
        <property name="sensitive">0</property>
        <property name="receives_default">1</property>
        <property name="use_underline">1</property>
        <style>
          <class name="suggested-action"/>
        </style>
      </object>
    </child>
    <action-widgets>
      <action-widget response="cancel">cancel</action-widget>
      <action-widget response="ok" default="true">forward</action-widget>
    </action-widgets>
    <child internal-child="content_area">
      <object class="GtkBox">
        <child>
          <object class="GtkGrid">
            <property name="hexpand">1</property>
            <property name="vexpand">1</property>
            <property name="margin_start">12</property>
            <property name="margin_end">12</property>
            <property name="margin_top">12</property>
            <property name="margin_bottom">12</property>
            <property name="row_spacing">6</property>
            <property name="column_spacing">12</property>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="yes">E_ncryption password</property>
                <property name="use_underline">1</property>
                <property name="mnemonic_widget">entry</property>
                <layout>
                  <property name="column">0</property>
                  <property name="row">0</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkPasswordEntry" id="entry">
                <property name="hexpand">1</property>
                <property name="activates_default">1</property>
                <property name="show_peek_icon">1</property>
                <layout>
                  <property name="column">1</property>
                  <property name="row">0</property>
                </layout>
              </object>
            </child>
            <child>
              <object class="GtkCheckButton" id="remember">
                <property name="label" translatable="yes">_Remember password</property>
                <property name="halign">start</property>
                <property name="use_underline">1</property>
                <layout>
                  <property name="column">1</property>
                  <property name="row">2</property>
                </layout>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
