<interface>
  <template class="SwitchRow" parent="AdwActionRow">
    <property name="activatable-widget">toggle</property>
    <property name="use-underline">true</property>
    <child type="suffix">
      <object class="GtkSwitch" id="toggle">
        <property name="active" bind-source="SwitchRow" bind-flags="sync-create">false</property>
        <property name="can-focus">false</property>
        <property name="halign">end</property>
        <property name="valign">center</property>
      </object>
    </child>
  </template>
</interface>
