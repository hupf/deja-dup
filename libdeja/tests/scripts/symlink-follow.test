[Operation]
Type=backup
Settings=include-list=['@TEST_HOME@/2', '$HOME'];
Script=mkdir -p @TEST_HOME@/a && ln -s a @TEST_HOME@/1 && ln -s 1 @TEST_HOME@/2

[Duplicity]
Runs=status;dry;backup;status-restore;verify;

[Duplicity status]
IncludeArgs='--include=@TEST_HOME@/2' '--include=@TEST_HOME@/1' '--include=@TEST_HOME@/a'

[Duplicity dry]
IncludeArgs='--include=@TEST_HOME@/2' '--include=@TEST_HOME@/1' '--include=@TEST_HOME@/a'

[Duplicity backup]
IncludeArgs='--include=@TEST_HOME@/2' '--include=@TEST_HOME@/1' '--include=@TEST_HOME@/a'

[Restic]
Runs=backup;verify;

[Restic backup]
ExtraIncludes=@TEST_HOME@/2;@TEST_HOME@/1;@TEST_HOME@/a;
